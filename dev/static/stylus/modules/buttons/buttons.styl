.migdex-button-slide
  display flex
  justify-content center
  align-items center
  padding 13px 50px
  position relative
  background: linear-gradient(92.29deg, #F37535 0%, #fdc630 100%);
  border-radius: 5px;
  font-family Ow500
  font-size 17px
  color #fff
  width max-content
  cursor pointer
  transition .2s ease
  box-shadow: 0 -5px rgba(0,0,0,0.3) inset;
  float: left;
  height 55px
  outline none
  padding-top 6.5px

  &:hover
    box-shadow: 0 -5px rgba(0,0,0,0.3) inset, 0 0 15px rgba(253,200,48,0.7);
    color #fff
    outline none
  &:active
    transform: translate(0px,5px);
    box-shadow: 0 0px rgba(0,0,0,0.3) inset;
    height 50px
    margin-bottom 5px
    outline none

  &:focus
    outline none

