.header-wrapper
  display flex
  align-items center
  justify-content space-between
  padding 6px 0
header
  position absolute
  top 0
  left 0
  right 0
  width 100%
  z-index 20
.header-info
  display flex
  align-items center
  .icon
    size(25px)
    fill #fff
    margin-right 15px
.header-middle
  display flex
  align-items center
.header-logo
  margin-right 70px
  .icon
    size(88px)
.header-info--text
  font-family Os600
  color #fff
  font-size 18px
.header-info
  margin-right 70px
  //&:last-child
  //  margin-right 0
.header-tel-text
  display block
  color #fff
  font-family Ow500
  font-size 24px
  margin-bottom 5px
.header-tel-wrap
  display flex
  flex-direction column
  align-items center
  margin-right 60px
.header-callback
  display block
  width max-content
  font-family Os600
  font-size 16px
  color rgba(255,255,255,0.6)
  border-bottom 1px dashed rgba(255,255,255,0.6)
  cursor pointer
.header-end
  display flex
  align-items center
.header-end-attr
  display flex
  align-items center
.header-user
  margin-right 40px
  cursor pointer
  .icon
    size(26px)
    fill #fff
.header-cart
  cursor pointer
  .icon
    size(30px)
    fill #fff
.header-menu--list
  display flex
  justify-content space-between
  align-items center
.header-menu--item
  font-family Os600
  font-size 15px
  text-transform uppercase
  padding 20px 0
.header-menu--wrapper
  background: rgba(43, 47, 63, 0.7);
  backdrop-filter: blur(20px);
  will-change transform




